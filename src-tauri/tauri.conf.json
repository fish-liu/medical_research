{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MedConsult",
  "version": "0.1.0",
  "identifier": "com.medical_research.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:8420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "MedConsult",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon":{
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true,
      "title": "MedConsult",
      "tooltip": "MedConsult"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
